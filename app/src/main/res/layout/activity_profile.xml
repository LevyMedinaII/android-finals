<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    tools:context="edu.ateneo.cie199.bucketdish.SearchResultActivity">

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <!--android:theme="@style/ratingbar"-->

    <!--android:theme="@style/textview"-->

    <!--android:theme="@style/ListFont"-->

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_nameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Name:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_back"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:text="Sample"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_emailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Email:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_contactLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_email"
        android:text="Contact Number:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_name"
        android:layout_marginTop="51dp"
        android:text="Email"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_usernameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txv_username"
        android:layout_alignParentStart="true"
        android:text="Username:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_email"
        android:layout_marginTop="35dp"
        android:text="Contact Number"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />
    <edu.ateneo.cie199.bucketdish.CustomButton
        android:id="@+id/btn_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_contact"
        android:text="Add your contact number"
        android:textSize="20sp" />
    <edu.ateneo.cie199.bucketdish.CustomButton
        android:id="@+id/btn_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_contact"
        android:text="Add"
        android:textSize="20sp" />

    <edu.ateneo.cie199.bucketdish.CustomButton
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="Back"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txv_contact"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</RelativeLayout>
