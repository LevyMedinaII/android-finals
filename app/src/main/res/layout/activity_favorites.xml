<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ateneo.cie199.bucketdish.FavoritesActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="200dp">

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/edt_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="List Name" />

    <EditText
        android:id="@+id/edt_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edt_listname"
        android:layout_below="@+id/edt_listname"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Item Name" />

    <Button
        android:id="@+id/btn_addtolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Add to List" />
</RelativeLayout>
