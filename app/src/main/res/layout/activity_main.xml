<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ateneo.cie199.bucketdish.MainActivity">

    <ImageButton
        android:id="@+id/imgbtn_randsearch"
        android:layout_width="350sp"
        android:layout_height="125sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/imgbtn_bucketlist"
        android:layout_width="350sp"
        android:layout_height="125sp"
        android:layout_alignStart="@+id/imgbtn_randsearch"
        android:layout_below="@+id/imgbtn_randsearch"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />


    <ImageButton
        android:id="@+id/imgbtn_favorites"
        android:layout_width="350sp"
        android:layout_height="125sp"
        android:layout_alignStart="@+id/imgbtn_bucketlist"
        android:layout_below="@+id/imgbtn_bucketlist"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgbtn_favorites"
        android:layout_below="@+id/imgbtn_favorites"
        android:layout_marginTop="26dp"
        android:text="Logout" />


</RelativeLayout>
