<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    tools:context="edu.ateneo.cie199.bucketdish.SearchResultActivity">

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_cuisines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_price"
        android:layout_below="@+id/txv_price"
        android:layout_marginTop="30dp"
        android:text="Cuisines"
        android:textSize="24sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:text="Restawrant"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_cuisines"
        android:layout_below="@+id/txv_cuisines"
        android:layout_marginRight="10dp"
        android:layout_marginTop="26dp"
        android:text="address"
        android:textSize="24sp" />

    <!--android:theme="@style/ratingbar"-->
    <edu.ateneo.cie199.bucketdish.CustomTextView
        android:id="@+id/txv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_name"
        android:layout_below="@+id/txv_name"
        android:layout_marginTop="16dp"
        android:text="Pesos"
        android:textSize="24sp" />

    <!--android:theme="@style/textview"-->

    <!--android:theme="@style/ListFont"-->

    <CheckBox
        android:id="@+id/chk_bucketdish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_back"
        android:layout_alignStart="@+id/txv_address"
        android:layout_marginBottom="18dp"
        android:buttonTint="@android:color/white"
        android:text="Bucket Dished"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <edu.ateneo.cie199.bucketdish.CustomButton
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_newFilter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:text="Another"
        android:textSize="20sp" />

    <edu.ateneo.cie199.bucketdish.CustomButton
        android:id="@+id/btn_newFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:text="New Filters"
        android:textSize="20sp" />

    <edu.ateneo.cie199.bucketdish.CustomButton
        android:id="@+id/btn_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chk_bucketdish"
        android:layout_alignEnd="@+id/txv_address"
        android:text="Map?" />

</RelativeLayout>
